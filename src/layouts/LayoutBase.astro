---
import MetaHead from '@/components/MetaHead.astro';
import MetaDev from '@/components/MetaDev.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import SkipLinks from '@/components/SkipLinks.astro';
import '@/styles/global.css';
import '@/styles/prose.css';
import { SITE } from '@/config'
import { THEME } from '@/config'

// const isDevMetaVisible = true;
const isDevMetaVisible = false;

export interface Props {
    homepage?: boolean;
    title?: string;
    description?: string;
}

const {
    homepage = false,
    title = SITE.title,
    description = SITE.description,
} = Astro.props;

const canonical = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang={THEME.language} dir={THEME.textDirection} class="page">

    <MetaHead
        homepage={homepage}
        title={title}
        description={description}
        canonical={canonical}
    />

    <body class="body">
        <SkipLinks />
        <div class="wrapper">
            <Header />
            <main class="main">
                <slot />
            </main>
            <Footer />
        </div>

        {isDevMetaVisible &&
            <MetaDev
                title={title}
                description={description}
                canonical={canonical}
            />
        }

    </body>

</html>
