---
import type { CollectionEntry } from 'astro:content';
import { getFormattedDate, getFormattedTime } from '@/utils/dateFormating.js';

export interface Props {
    post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<article>
    <a href={`/post/${post.slug}`} class="header">
        { post.data.title ? <h2>→ {post.data.title}</h2> : <h2>→ Пост {post.data.id}</h2>}
    </a>

    <p>{post.data.form}</p>

    <p>{getFormattedDate(post.data.date)} * {getFormattedTime(post.data.date)}</p>


</article>

<style>
    .header {
        text-decoration: none;
        color: var(--theme-color-base);
    }

    .header:hover {
        text-decoration: underline;
    }

    .header:visited {
        color: var(--theme-color-base);
    }

    .header h2 {
        color: var(--theme-color-base);
    }
</style>
