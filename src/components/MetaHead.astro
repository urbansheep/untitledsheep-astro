---
import { SITE } from '@/config'

export interface Props {
    homepage?: boolean;
    title: string;
    description: string;
    canonical?: URL;
}

const {
    homepage = false,
    title,
    description,
    canonical
} = Astro.props;
---

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="canonical" href={canonical} />
    <link rel="alternate" type="application/rss+xml" title={SITE.title} href="/rss.xml" />

    <!-- Primary Meta Tags -->
    {homepage ? <title>{title}</title> : <title>{title} • {SITE.title}</title>}
    {homepage ? <meta name="title" content={title} /> : <meta name="title" content={`${title} • ${SITE.title}`} />}
    <!-- TODO: -->
    <meta name="description" content={description}>

    <!-- Open Graph / Facebook -->
