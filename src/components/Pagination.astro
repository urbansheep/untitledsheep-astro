---
export interface Props {
    next?: string;
    prev?: string;
    current?: number;
    total?: number;
}

const {
    next,
    prev,
    current,
    total,
} = Astro.props;
---

<nav class="pagination">
    { next && (
        <span>← <a href={next}>В прошлое</a></span>
    )}
    { current && total && (
        <span>Страница {current} из {total}</span>
    )}
    { prev && (
        <span><a href={prev}>В будущее</a> →</span>
    )}
</nav>


<style>

    .pagination {
        display:flex;
        flex-direction: row;
        justify-content: space-between;
        margin: var(--spacing-2xl) 0;
        color: var(--color-grey-400);
        font-size: var(--font-size-xs);
    }

    .pagination a {
        color: var(--color-grey-400);
        text-decoration: none;
        text-transform: uppercase;
    }

    .pagination a:hover {
        color: var(--color-grey-400);
        text-decoration: underline;
    }

</style>
